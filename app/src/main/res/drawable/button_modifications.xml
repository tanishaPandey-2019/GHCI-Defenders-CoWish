<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="#330000" />
        <gradient android:angle="-90" android:startColor="#ffaa80" android:endColor="#ffccb3"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="#330000" />
        <solid android:color="#ffddcc"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="20dip" />
        <stroke android:width="1dip" android:color="#330000" />
        <gradient android:angle="-90" android:startColor="#ffccb3" android:endColor="#ffaa80" />
    </shape>
</item>
</selector>