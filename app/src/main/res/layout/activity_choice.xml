<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue2"
    tools:context=".activity.ChoiceActivity">


    <Button
        android:id="@+id/haveButton"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="572dp"
        android:background="@drawable/button_modifications"
        android:text="HAVE A WISH?" />

    <Button
        android:id="@+id/grantButton"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="242dp"
        android:background="@drawable/button_modifications"
        android:text="GRANT A WISH" />

    <TextView
        android:id="@+id/titleChoice"
        android:layout_width="417dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="374dp"
        android:fontFamily="sans-serif-medium"
        android:text="What would you like to do?"
        android:textColor="#ffffff"
        android:textSize="33sp" />

    <ImageView
        android:id="@+id/think"
        android:layout_width="222dp"
        android:layout_height="244dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/thinking" />
</RelativeLayout>