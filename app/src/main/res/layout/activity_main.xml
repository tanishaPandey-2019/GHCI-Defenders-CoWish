<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_01"
    tools:context=".activity.MainActivity">

<!--    <include-->
<!--        layout="@layout/login_layout"-->
<!--       />-->


    <ImageView
        android:id="@+id/photoLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="78dp"
        app:srcCompat="@drawable/gift_02" />

    <EditText
        android:id="@+id/LoginAadhar"
        android:hint="Aadhaar number"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ic_action_name"
        android:textColor="#ffffff"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="258dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/loginPass"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ic_action_namep"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:background="@drawable/button_modifications"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:layout_marginTop="80dp"
        android:text="LOGIN" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:outlineSpotShadowColor="#ffffff"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/askRegisteration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Register Here"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="281dp"
        android:text="CoWish"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:fontFamily="sans-serif-medium"

        />

</RelativeLayout>